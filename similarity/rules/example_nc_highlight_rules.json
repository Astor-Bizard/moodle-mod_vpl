 {
    "name": "example-tokenizer",
    "extension": "no-ext",
    "check_rules": true,
    "inherit_rules": "text_highlight_rules",
    "override_tokens": {
        "constant": "vpl_literal",
        "string.start": "vpl_literal",
        "string.end": "vpl_literal"
    },
    "states": {
        "start": [
            {
                "token": "comment",
                "regex": "\\/\\/",
                "next": "single_line_comment"
            },
            {
                "token": "storage.type",
                "regex": "function\\s*\\(\\w+\\)",
                "next": "declr_function"
            }
        ],
        "single_line_comment": [
            {
                "token": "comment",
                "regex": "\\$",
                "next": "single_line_comment"
            },
            {
                "token": "comment",
                "regex": "$",
                "next": "start"
            }
        ],
        "declr_function": [
            {
                "token": [
                    "storage.type",
                    "entity.name",
                    "entity.name"
                ],
                "regex": "(function)(\\s+)([a-zA-Z_][a-zA-Z0-9_]*\\b)",
                "next": "start"
            }
        ]
    }
}